<resources
        xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:tint">@color/gray</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>

        <!--        <item name="tint">@color/gray</item>-->
    </style>

    <style name="AppThemeNoActionBarDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="CustomToolbarLight" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:elevation" tools:ignore="NewApi,PrivateResource">@dimen/design_appbar_elevation</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="subtitleTextColor">?android:attr/textColorSecondary</item>
        <item name="android:theme">@style/CustomToolbarLight.Primary</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background" tools:ignore="PrivateResource">@color/material_grey_900</item>
    </style>

    <style name="CustomToolbarLight.Primary" parent="">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ActionbarTitle.Light" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ActionbarTitle.Transparent" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="SecondaryTextLight">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="TransparentToolBarLight" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="RecyclerViewLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/grayLighter</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AppThemeNoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="tint">@color/gray</item>
        <item name="colorControlNormal">@color/textColorSecondary</item>
    </style>

    <style name="AppThemeNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
