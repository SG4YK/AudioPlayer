<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="72dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/audio_item_albumart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lucas_benjamin_unsplash"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio_item_title"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintBottom_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="1.0"
            android:textColor="@color/grayDarker"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Album - Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audio_item_album_artist"
            app:layout_constraintStart_toEndOf="@+id/space2"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/space2"
            android:textColor="@color/gray"/>
    <Space
            android:layout_width="16dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/space"
            app:layout_constraintStart_toEndOf="@+id/audio_item_albumart"/>
    <Space
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:id="@+id/space2"
            app:layout_constraintStart_toEndOf="@+id/audio_item_albumart"
            app:layout_constraintTop_toBottomOf="@+id/space"/>
</androidx.constraintlayout.widget.ConstraintLayout>