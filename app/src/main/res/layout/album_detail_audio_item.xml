<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
>
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:singleLine="false"
            app:layout_constraintEnd_toStartOf="@+id/duration"
            android:layout_marginEnd="28dp"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/space3"
            app:layout_constraintStart_toEndOf="@+id/space3"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/title"
            android:singleLine="false"
            android:layout_marginEnd="16dp" android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/textColorSecondary"/>
    <Space
            android:layout_width="32dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/space3" app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <Space
            android:layout_width="32dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/space3"
            android:id="@+id/space4" app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/artist"
            app:layout_constraintBottom_toBottomOf="@+id/space4" app:layout_constraintStart_toEndOf="@+id/space4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@drawable/ic_music_note_white_24dp" android:id="@+id/imageView"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>