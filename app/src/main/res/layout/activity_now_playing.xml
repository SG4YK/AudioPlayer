<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NowPlayingActivity"
        android:fitsSystemWindows="false"
        style="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:id="@+id/rootLayout" android:background="@color/grayDarker">
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@color/gray"
            android:id="@+id/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="visible"
            android:tintMode="screen"/>
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Title"
            android:background="@color/transparent"
            app:subtitle="Artist - Album"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TransparentToolBarLight"
            android:layout_marginTop="@dimen/status_bar_height"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/constraintLayout" android:layout_marginBottom="56dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/position"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:textColor="#80FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/seekbar"/>
        <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekbar"
                app:layout_constraintTop_toTopOf="parent"
                android:progressTint="#B3FFFFFF"
                android:thumbTint="@color/white"
                android:progressBackgroundTint="#FFFFFFFF"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/position"
                app:layout_constraintEnd_toStartOf="@+id/duration"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_play"
                app:tint="@color/colorAccent"
                app:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_play_arrow_white_24dp"
                app:fabSize="auto"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/seekbar"
                android:layout_marginTop="16dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:tint="@color/colorAccent"
                app:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_skip_next_white_24dp"
                android:id="@+id/button_next"
                android:focusable="true"
                app:layout_constraintStart_toEndOf="@+id/button_play" android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/button_play"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                app:tint="@color/colorAccent"
                app:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_skip_previous_white_24dp"
                android:id="@+id/floatingActionButton3"
                android:focusable="true" app:layout_constraintEnd_toStartOf="@+id/button_play"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/button_play"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/duration"
                app:layout_constraintBottom_toBottomOf="@+id/seekbar"
                android:textColor="#80FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.github.sg4yk.audioplayer.utils.SquareImageView
            android:id="@+id/album_art"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:srcCompat="@drawable/lucas_benjamin_unsplash"
            android:elevation="16dp"
            android:padding="0dp"
            android:outlineProvider="bounds"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>