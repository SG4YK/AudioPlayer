<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NowPlayingActivity"
        android:fitsSystemWindows="false"
        style="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:id="@+id/rootLayout">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@color/white"
            android:id="@+id/background" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" android:tintMode="screen"/>
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Title"
            android:background="@color/transparent"
            app:subtitle="Album - Artist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TransparentToolBarLight"
            android:layout_marginTop="@dimen/status_bar_height"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:tint="@color/colorAccent"
            app:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp"
            android:id="@+id/button_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:fabSize="auto"
            android:focusable="true" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:tint="@color/colorAccent"
            app:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_skip_next_black_24dp"
            android:id="@+id/button_next"
            app:layout_constraintStart_toEndOf="@+id/button_play"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_play"
            android:focusable="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:tint="@color/colorAccent"
            app:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_skip_previous_white_24dp"
            android:id="@+id/floatingActionButton3"
            app:layout_constraintEnd_toStartOf="@+id/button_play"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_play"
            android:focusable="true"/>
    <ImageView
            android:id="@+id/album_art"
            android:layout_width="@dimen/album_art_size"
            android:layout_height="@dimen/album_art_size"
            app:srcCompat="@drawable/lucas_benjamin_unsplash"
            android:elevation="16dp"
            android:padding="0dp"
            android:outlineProvider="paddedBounds"
            android:scaleType="centerCrop" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>