<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">


    <TextView
            android:text="Now Playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    <TextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:ellipsize="marquee" android:singleLine="true"/>
    <TextView
            android:text="Artist - Album"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nav_header_artistalbum"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginTop="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="#4D000000"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp"
            app:tint="@color/white"
            android:id="@+id/nav_button_play"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_artistalbum"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton" android:focusable="true"/>
bl
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="#4D000000"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            app:srcCompat="@drawable/ic_skip_previous_white_24dp"
            app:tint="@color/white"
            android:id="@+id/nav_button_previous"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton" android:focusable="true"
            app:layout_constraintEnd_toStartOf="@+id/nav_button_play"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_artistalbum" android:layout_marginTop="16dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="#4D000000"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            app:srcCompat="@drawable/ic_skip_next_black_24dp"
            app:tint="@color/white"
            android:id="@+id/nav_button_next"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_artistalbum"
            android:layout_marginTop="16dp"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton" android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/nav_button_play" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>