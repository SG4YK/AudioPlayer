<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_header_layout">


    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/nav_header_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            app:srcCompat="@color/colorAccent"
            android:tint="@color/transparent"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Now Playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end" android:textColor="#B3FFFFFF"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nav_header_title"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:ellipsize="marquee" android:singleLine="true"
            android:theme="@style/secondaryTextLight"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textColor="#CCFFFFFF"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Artist - Album"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nav_header_artistalbum"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:theme="@style/secondaryTextLight"
            android:layout_marginTop="8dp" android:textColor="#B3FFFFFF"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nav_button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:clickable="true"
            android:elevation="0dp"
            app:elevation="0dp"
            app:backgroundTint="#4D000000"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp"
            app:tint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_artistalbum"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton"
            android:focusable="true"
            android:outlineProvider="none"
            android:layout_marginTop="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nav_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:clickable="true"
            android:elevation="0dp"
            app:elevation="0dp"
            app:backgroundTint="#4D000000"
            app:srcCompat="@drawable/ic_skip_previous_white_24dp"
            app:tint="@color/white"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton"
            android:focusable="true"
            app:layout_constraintEnd_toStartOf="@+id/nav_button_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:outlineProvider="none"
            app:layout_constraintTop_toTopOf="@+id/nav_button_play"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/nav_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:borderWidth="0dp"
            android:clickable="true"
            android:elevation="0dp"
            app:elevation="0dp"
            app:backgroundTint="#4D000000"
            app:srcCompat="@drawable/ic_skip_next_white_24dp"
            app:tint="@color/white"
            android:theme="@style/Widget.MaterialComponents.FloatingActionButton"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/nav_button_play"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:outlineProvider="none"
            app:layout_constraintTop_toTopOf="@+id/nav_button_play"/>

</androidx.constraintlayout.widget.ConstraintLayout>